# install ubuntu on virtualbox
https://ubuntu.com/download/desktop/thank-you?version=20.04.4&architecture=amd64
# open port 4242(HOST PORT) and 22(GUEST PORT) ssh on virtualbox
# enable virtualisation on the debian machine
VBoxManage modifyvm VM-NAME --nested-hw-virt on

# on vm
sudo apt-get upgrade
sudo apt-get update
sudo apt-get install openssh-server
sudo service ssh start

# generate a key on the main machine and copy paste it
# into authorized keys on the created vm
cd ~/.ssh
ssh-keygen
cat id_rsa.pub >> authorized_keys
chmod 640 authorized_keys
sudo service ssh restart
